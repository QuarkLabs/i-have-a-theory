<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shelter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avoid.ihaveatheory.view.ShelterActivity"

    android:background="@drawable/dashboard_background">


    <com.avoid.ihaveatheory.widget.LabelTextView
        android:text="Shelter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shelter_rest_button"
        android:layout_alignStart="@+id/shelter_rest_button"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/shelter_title"
        android:textSize="30sp" />

    <com.avoid.ihaveatheory.widget.HexButton
        android:text="@string/dashboard_make_camp"
        android:id="@+id/shelter_camp_button"
        android:layout_width="200dp"
        android:gravity="center|bottom"
        android:layout_height="200dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignTop="@+id/shelter_rest_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.avoid.ihaveatheory.widget.BackButton
        android:text="@string/back_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/back_button" />

    <com.avoid.ihaveatheory.widget.HexButton
        android:text="@string/dashboard_sleep"
        android:id="@+id/shelter_sleep_button"
        android:layout_width="200dp"
        android:gravity="center|bottom"
        android:layout_height="200dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/shelter_title"
        android:layout_toRightOf="@+id/shelter_title"
        android:layout_toEndOf="@+id/shelter_title" />

    <com.avoid.ihaveatheory.widget.HexButton
        android:text="@string/dashboard_rest"
        android:id="@+id/shelter_rest_button"
        android:layout_width="200dp"
        android:gravity="center|bottom"
        android:layout_height="200dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_above="@+id/back_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
