<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avoid.ihaveatheory.view.ScenarioActivity"

    android:background="@drawable/bg_name">

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@drawable/forest_gray"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/imageButton"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:contentDescription="@string/forest_con_des" />

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@drawable/mountain_range_gray"
        android:id="@+id/imageButton3"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:background="@null"
        android:contentDescription="@string/mountains_con_des" />

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@drawable/tundra_gray"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:contentDescription="@string/tundra_con_des" />

    <TextView
        android:text="@string/forest_text_view"
        android:layout_width="150dp"
        android:id="@+id/forest_text_view"
        android:layout_height="30dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:textAlignment="center"
        android:textSize="20sp"
        android:contentDescription="@string/forest_con_des" />

    <TextView
        android:text="@string/mountains_text_view"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/mountain_text_view"
        android:textAlignment="center"
        android:layout_above="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:textSize="20sp"
        android:contentDescription="@string/mountains_con_des" />

    <TextView
        android:text="@string/tundra_text_view"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/tundra_text_view"
        android:layout_above="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:contentDescription="@string/tundra_con_des" />
</RelativeLayout>
