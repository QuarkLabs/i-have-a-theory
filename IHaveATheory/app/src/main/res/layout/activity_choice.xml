<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avoid.ihaveatheory.view.ChoiceActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.avoid.ihaveatheory.widget.LabelTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="This is a sample choice question. The protagonist goes through a small path and reach a lake. The water is crystal clear."
            android:textSize="20sp" />

        <com.avoid.ihaveatheory.widget.ChoiceButton
            android:id="@+id/a_choice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Choice A" />

        <com.avoid.ihaveatheory.widget.ChoiceButton
            android:id="@+id/b_choice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choice B" />
    </LinearLayout>
</RelativeLayout>