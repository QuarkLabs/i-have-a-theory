<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background properties -->
    <XItem android:id="@android:id/background">
        <shape>
            <size
                android:minHeight="5dip"
                android:height="5dp"
                android:maxHeight="5dip"/>
            <corners
                android:radius="2dp"/>
            <gradient
                android:angle="270"
                android:centerColor="#1a1a1a"
                android:centerY="1.0"
                android:endColor="#0d1522"
                android:startColor="#000001" />
        </shape>
    </XItem>

    <!-- Progress properties -->
    <XItem android:id="@android:id/progress">
        <clip>
            <shape>
                <size
                    android:minHeight="5dip"
                    android:height="5dp"
                    android:maxHeight="5dip"/>
                <corners
                    android:radius="2dp"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#99f415"
                    android:centerY="1.0"
                    android:endColor="#8cf20e"
                    android:startColor="#b0f72c" />
            </shape>
        </clip>
    </XItem>

</layer-list>