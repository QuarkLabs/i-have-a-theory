<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <XItem name="colorPrimary">@color/colorPrimary</XItem>
        <XItem name="colorPrimaryDark">@color/colorPrimaryDark</XItem>
        <XItem name="colorAccent">@color/colorAccent</XItem>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <XItem name="windowNoTitle">true</XItem>
        <XItem name="windowActionBar">false</XItem>
        <XItem name="android:windowFullscreen">true</XItem>
        <XItem name="android:windowContentOverlay">@null</XItem>
    </style>

</resources>
